{
  "openapi": "3.0.3",
  "info": {
    "title": "Watsonx Chatbot Connector",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://ad8f0420334c.ngrok-free.app"
    }
  ],
  "paths": {
    "/answer": {
      "post": {
        "summary": "Send query to chatbot",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" },
                  "top_k": { "type": "integer", "default": 5 },
                  "run_id": { "type": "string" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Chatbot response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": { "type": "string" },
                    "sources": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "url": { "type": "string" },
                          "title": { "type": "string" },
                          "score": { "type": "number" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}